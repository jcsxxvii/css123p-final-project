<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.css123group.corr4_app.TransferController"
      alignment="CENTER" spacing="20" styleClass="content-box" prefWidth="800" prefHeight="600">

    <Label text="TRANSFER FUNDS" styleClass="header-label"/>

    <!-- Amount Field -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Amount:" styleClass="normal-label"/>
        <TextField fx:id="amountField" promptText="Enter Amount" prefWidth="300" maxWidth="300"/>
    </VBox>

    <!-- From Account Field -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="From:" styleClass="normal-label"/>
        <TextField fx:id="fromAccountField" promptText="Enter Account Number" prefWidth="300" maxWidth="300"/>
    </VBox>

    <!-- To Account Field -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Transfer To:" styleClass="normal-label"/>
        <TextField fx:id="toAccountField" promptText="Enter Account Number" prefWidth="300" maxWidth="300"/>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="CONFIRM" onAction="#handleConfirm" styleClass="nav-button"/>
        <Button text="CLEAR TRANSACTION" onAction="#handleClear" styleClass="nav-button"/>
    </HBox>

</VBox>


