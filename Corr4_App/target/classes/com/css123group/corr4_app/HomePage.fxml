<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.css123group.corr4_app.HomeController"
            fx:id="rootPane"
            prefWidth="1160" prefHeight="850"
            stylesheets="@homepage.css"
            focusTraversable="true">

    <!-- Sidebar -->
    <left>
        <VBox spacing="40" alignment="TOP_CENTER" styleClass="sidebar">
            <!-- Logo -->
            <Label text="CORR4" styleClass="header-label"/>

            <!-- Navigation Buttons -->
            <VBox spacing="25" alignment="CENTER">
                <Button text="Profile"   onAction="#handleProfile" styleClass="nav-button"/>
                <Button text="Balance"   onAction="#handleBalance" styleClass="nav-button"/>
                <Button text="Cards"     onAction="#handleCards" styleClass="nav-button"/>
                <Button text="Transfer"  onAction="#handleTransfer" styleClass="nav-button"/>
            </VBox>

            <!-- Push Logout to Bottom -->
            <Pane VBox.vgrow="ALWAYS"/>

            <!-- Logout Button -->
            <VBox alignment="BOTTOM_CENTER" style="-fx-padding: 20;">
                <Button text="LOGOUT" onAction="#handleLogout" styleClass="logout-button"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <!-- Table of customers -->
        <VBox spacing="10" styleClass="main-content" fx:id="mainContent" alignment="TOP_CENTER" prefWidth="800" prefHeight="600" >
            <Label text="Customers" styleClass="section-label" />
            <TableView fx:id="customersTable" prefWidth="900" prefHeight="520">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                    <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120" />
                    <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180" />
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="110" />
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="160" />
                    <TableColumn fx:id="colDob" text="DOB" prefWidth="100" />
                    <TableColumn fx:id="colProvider" text="Provider" prefWidth="100" />
                    <TableColumn fx:id="colDisabled" text="Disabled" prefWidth="80" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>





